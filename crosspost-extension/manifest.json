{
  "manifest_version": 3,
  "name": "Crosspost to Bluesky / Mastodon / Threads",
  "version": "0.14",
  "description": "Twitter/X への投稿を Bluesky・Mastodon・Threads に同時クロスポスト (v0.10)",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://bsky.social/*",
    "https://bsky.network/*",
    "https://graph.threads.net/*",
    "https://*.mastodon.social/*",
    "https://img.youtube.com/*",
    "https://*/*",
    "https://catbox.moe/*",
    "https://files.catbox.moe/*",
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Crosspost Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}